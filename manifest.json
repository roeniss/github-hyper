{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "GitHub Hyper",
  "description": "A Chrome extension that enhances GitHub's user interface with helpful features.",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "author": "Roeniss Moon",
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://*.github.com/*"
      ],
      "js": ["scripts/absolute-time.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://github.com/*",
        "https://*.github.com/*"
      ],
      "js": ["scripts/ide-deep-link.js"],
      "run_at": "document_end"
    }
  ]
}